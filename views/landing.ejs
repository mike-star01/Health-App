            gap: 1rem;
        }

        .button {
            font-size: 1rem;
            text-decoration: none;
            color: #000;
            border: 2px solid #000;
            padding: 0.5rem 1.5rem;
            border-radius: 5px;
            transition: background 0.3s ease, color 0.3s ease;
        }

        .button:hover {
            background: #000;
            color: #fff;
        }

        section {
            padding: 2rem;
            text-align: center;
        }

        #section-a {
            background: #f4f4f4;
        }

        #section-b {
            background: #e2e2e2;
        }

        #section-c {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            justify-content: center;
        }

        #section-c div {
            flex: 1;
            min-width: 250px;
            max-width: 300px;
            padding: 1rem;
            background: #f4f4f4;
            border-radius: 5px;
        }
    </style>
