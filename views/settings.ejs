            <script>
            // Initialize Lucide icons
            lucide.createIcons();

            function toggleDropdown(arrowId, contentId) {
                const dropdownContent = document.getElementById(contentId);
                const dropdownArrow = document.getElementById(arrowId);

                if (dropdownContent.style.height === "0px" || !dropdownContent.style.height) {
                // Expanding
                dropdownContent.style.opacity = "1";
                dropdownContent.style.height = dropdownContent.scrollHeight + "px";
                dropdownContent.classList.remove("show");
                dropdownArrow.classList.remove("down");
                dropdownArrow.classList.add("up");
                } else {
                // Collapsing
                dropdownContent.style.opacity = "0";
                dropdownContent.style.height = "0";
                setTimeout(() => {
                    dropdownContent.classList.add("show");
                }, 300);
                dropdownArrow.classList.remove("up");
                dropdownArrow.classList.add("down");
                }
            }
            </script>


